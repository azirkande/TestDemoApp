
<div data-bind="visible: classes().length > 0">
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Teacher</th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody data-bind="foreach: classes">
            <tr>
                <td data-bind="text: Id, visible: false"></td>
                <td data-bind="text: Name , click: $parent.getStudentsOnClassSelection"></td>
                <td data-bind="text: Location"></td>
                <td data-bind="text: Teacher"></td>
                <td><input type="button" class="btn btn-danger btn-xs" data-toggle="modal" data-target="#classModal" value="edit " data-bind="click: $parent.editClass" /></td>
                <td><input type="button" class="btn btn-danger btn-xs" value="delete " data-bind="click: $parent.removeClass" /></td>
            </tr>
        </tbody>
    </table>

</div>

<div data-bind="visible: classes().length == 0">
    No classes in the school.
</div>

<br />
<input type="button" class="btn btn-default" data-toggle="modal" data-target="#classModal" value="Add" data-bind="click: addClass" />
